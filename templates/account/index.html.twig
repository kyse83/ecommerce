{% extends 'base.html.twig' %}

{% block title %}mon compte - La boutique française{% endblock %}

{% block contents %}
    <h1>Mon compte</h1>
    {% if is_granted('ROLE_ADMIN') %}
    <a href ="/admin">Admistrer le site</a><br>     
    {% endif %}
    Bienvenue {{app.user.firstname}} dans votre compte.
    <hr>
    <div class="row">
        <div class="col-md-4">
            <div class = "account-item text-center">
                <img src ="{{asset('assets/img/password.png')}}" alt="Modifier mon mot de passe"><br/>
                <a href ="{{path('account_password')}}">Modifier mon mot de passe</a><br> 
            </div>
        </div>
        <div class="col-md-4">
            <div class= "account-item text-center">
                <img src ="{{asset('assets/img/home-address.png')}}" alt="Gérer mes adresses"><br/>
                <a href ="{{path('account_address')}}">Gérer mes adresses</a><br> 
            </div>
        </div>
        <div class="col-md-4">
            <div class = "account-item text-center">
                <img src ="{{asset('assets/img/checkout.png')}}" alt="Mes commandes"><br/>
                <a href ="{{path('account_order')}}">Mes commandes</a><br> 
            </div>
        </div>
    </div>
   
    <hr>
{% endblock %}
